{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@asheshDon/assets/*": ["assets/*"],
      "@asheshDon/hooks/*": ["hooks/*"],
      "@asheshDon/components/*": ["components/*"],
      "@asheshDon/pages/*": ["pages/*"],
      "@asheshDon/providers/*": ["providers/*"],
      "@asheshDon/routes/*": ["routes/*"],
      "@asheshDon/service/*": ["service/*"],
      "@asheshDon/theme/*": ["theme/*"]
    }
  },
  "include": ["src", "types.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
